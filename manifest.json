{
  "manifest_version": 3,
  "name": "AWS Environment Border Guard",
  "version": "1.0.0",
  "description": "Adiciona alertas visuais (borda e badge) no AWS Console para prevenir ações destrutivas no ambiente errado.",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.console.aws.amazon.com/*"
  ],
  "background": {
    "service_worker": "src/background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.console.aws.amazon.com/*"
      ],
      "js": [
        "src/content/injector.js"
      ],
      "css": [
        "src/content/styles.css"
      ]
    }
  ],
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  }
}
